{
  "version": 6,
  "cmakeMinimumRequired": {
    "major": 3,
    "minor": 26,
    "patch": 1
  },
  "include": [
    "CMakeDebugPresets.json"
  ],
  "configurePresets": [
    {
      "name": "windows-base",
      "description": "Target Windows with the GNUC development environment.",
      "hidden": true,
      "inherits": [
        "debug-settings"
      ],
      "generator": "Ninja Multi-Config",
      "binaryDir": "${sourceDir}/build/${presetName}",
      "installDir": "${sourceDir}/installed/${presetName}",
      "environment": {
        "CMAKE_CONFIGURATION_TYPES": "Debug;Release;RelWithDebInfo;MinSizeRel",
        "VCPKG_DOWNLOADS": "${sourceDir}/downloads",
        "VCPKG_BINARY_SOURCES": "clear;nuget,GitHub,readwrite",
        "VCPKG_USE_NUGET_CACHE": "true",
        "VCPKG_CRT_LINKAGE": "dynamic",
        "VCPKG_LIBRARY_LINKAGE": "dynamic",
        "CMAKE_C_COMPILER": "gcc.exe",
        "CMAKE_CXX_COMPILER": "g++.exe"
      },
      "cacheVariables": {
        "CMAKE_CONFIGURATION_TYPES": "Debug;Release;RelWithDebInfo;MinSizeRel",
        "CMAKE_C_COMPILER": "gcc.exe",
        "CMAKE_CXX_COMPILER": "g++.exe"
      },
      "condition": {
        "type": "equals",
        "lhs": "${hostSystemName}",
        "rhs": "Windows"
      }
  },
  {
    "name": "x64-windows",
    "displayName": "x64",
    "description": "Target Windows (64-bit) with the GNUC development environment.",
    "inherits":[
      "windows-base"
    ],
    "toolset": {
      "value": "host=x64",
      "strategy": "set"
    },
    "architecture": {
      "value": "x64",
      "strategy": "set"
    },
    "environment": {
      "VCPKG_DEFAULT_TRIPLET": "x64-windows",
      "VCPKG_DEFAULT_HOST_TRIPLET": "x64-windows"
    },
    "vendor": {
        "microsoft.com/VisualStudioSettings/CMake/1.0": {
          "intelliSenseMode": "windows-msvc-x86"
        }
      }
    },
    {
      "name": "x86-windows",
      "displayName": "x86",
      "description": "Target Windows (32-bit) with the GNUC development environment.",
      "inherits": [
        "windows-base"
      ],
      "toolset":{
        "value": "host=x86",
        "strategy": "external"
      },
      "architecture": {
        "value": "x86",
        "strategy": "external"
      },
      "environment": {
        "VCPKG_DEFAULT_TRIPLET": "x86-windows",
        "VCPKG_DEFAULT_HOST_TRIPLET": "x86-windows"
      },
      "cacheVariables": {
        "CMAKE_C_COMPILER": "gcc.exe",
        "CMAKE_CXX_COMPILER": "g++.exe"
      },
      "vendor": {
        "microsoft.com/VisualStudioSettings/CMake/1.0": {
          "intelliSenseMode": "windows-msvc-x86"
        }
      }
    }
  ]
}
